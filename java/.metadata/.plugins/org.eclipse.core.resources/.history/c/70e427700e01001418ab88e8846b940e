package com.lxn.littleProject;

import java.awt.Color;
import java.awt.Frame;
import java.awt.Graphics;
import java.awt.Image;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.awt.event.WindowListener;

import javax.swing.plaf.ColorUIResource;

/**
 *  第一个小游戏，躲子弹
 * @author xiaoning
 *
 */
public class myFirstGame extends Frame{
	/**
	 * 加载窗口
	 * 
	 */
	double x=150,y,temp,tempy;

	Image img=GameUtil.GetImage("Image/sun.jpg");
	
	public void lauchFrame(){
		setSize(500, 500);
		setLocation(300, 100);
		setVisible(true);
		new paintTread().start();
		
		/**
		 * 关闭窗口
		 */
		addWindowListener(new WindowAdapter() {

			@Override
			public void windowClosing(WindowEvent e) {
				// TODO Auto-generated method stub
				System.exit(0);
			}
		});
		
		
	}
	
	
	/**
	 *在程序上画东西。。。。
	 *类似画笔的作用，Frame会自动调用此重写函数
	 */
	@Override
	public void paint(Graphics g) {
//		g.setColor(Color.BLUE);
//		g.drawString("asdasdasda", 200, 200);
//		g.drawLine(100, 100, 200, 200);
//		g.drawOval(200, 200, 200, 200); 
		
		/**
		 *图片运动的实现
		 */
		g.drawImage(img, (int)x, (int)y,50,50, null);
		if(x>=250){
			temp=-1;
			tempy=-1;
		}else if(x<=150){
			temp=1;
			tempy=1;
		}else {
			temp=1;
			tempy=1;
		}
		x+=temp;
		y=Math.sqrt(2500-(x-200)*(x-200))*tempy+200;
		
	}
/**
 * 定义一个重画窗体的内部类，内部类哦
 * @author xiaoning
 *
 */
class paintTread extends Thread{
	public void run(){
		while(true){
			repaint();
			try {
				super.sleep(40);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
}


	
	public static void main(String[] args) {
		myFirstGame mfg=new myFirstGame();
		mfg.lauchFrame();
	}
}
